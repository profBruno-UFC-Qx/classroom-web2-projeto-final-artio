generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ARTIST
  CLIENT 
  COMMON_USER
}

model User {
  id                String    @id @default(uuid())
  name              String
  email             String    @unique
  password          String    // Hash da senha
  description       String?
  role              UserRole  @default(CLIENT)   
  socialmedia       String?   
}